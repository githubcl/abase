<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 根布局风格 -->
    <style name="base_layout_style">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/base_layout_bg</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- 公共按钮风格 -->
    <style name="base_btn_style">
        <item name="android:background">@drawable/base_btn_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 公共EditText风格 -->
    <style name="base_edt_style">
        <item name="android:background">@drawable/base_edt_selector</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 公共tab单选框风格 -->
    <style name="base_tab_radio_style">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/base_tab_radio_bg</item>
    </style>

    <!-- AlwaysMarqueeTextView自动滚动风格 -->
    <style name="always_marquee_textview_style">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!-- 自定义 ProgressDialog风格 -->
    <style name="base_progress_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- 自定义对话框风格 -->
    <style name="base_dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>